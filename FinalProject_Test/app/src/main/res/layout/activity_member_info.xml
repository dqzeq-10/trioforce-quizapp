<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="1080px"
    android:layout_height="2400px"
    android:background="@raw/bg"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:padding="18dp"

        android:background="@drawable/bg_popup">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo2_bold"
            android:scaleType="fitCenter"
            android:text="Trần Đình Quý (C)\n 22115053122135 - 124LTDD03 \n➕"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2a9d8f"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo2_bold"
            android:scaleType="fitCenter"
            android:text="Nguyễn Vũ Khanh \n 22115053122118 - 124LTDD03\n➕"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#2a9d8f"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo2_bold"
            android:scaleType="fitCenter"
            android:text="Nguyễn Đình Đức \n 22115141122102 - 124LTDD03"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#2a9d8f"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo2_bold"
            android:scaleType="fitCenter"
            android:text="="
            android:textSize="35sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo2_bold"
            android:scaleType="fitCenter"
            android:text="🔥13.TrioForce🔥"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:textAlignment="center"
            android:textColor="#669bbc"
            android:layout_gravity="center"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonBatDau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btn_dang_nhap"
        android:elevation="100dp"
        android:paddingStart="50dp"
        android:paddingTop="5dp"

        android:paddingEnd="50dp"
        android:paddingBottom="5dp"
        android:text="Bắt đầu"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:fontFamily="@font/baloo2_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="333dp"
        android:layout_height="192dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168"
        app:srcCompat="@raw/quiztime_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>