<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tháng và năm -->
    <TextView
        android:id="@+id/tvMonthYearP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo2_bold"
        android:text="Tháng 7 năm 2024"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- Nội dung chính -->
    <LinearLayout
        android:id="@+id/linearProggress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_tt_storage"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvTitleP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo2_bold"
            android:text="Top 10 câu đố vui về ca dao , tục ngữ"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <!-- Tiến độ -->
        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo2_regular"
            android:text="Tiến độ: 3/10"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <!-- Tác giả -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@raw/avatar_male"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tvAuthorP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/baloo2_bold"
                android:text="dinhquyzeq10"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="10dp"
        android:background="#D8D8D8" />
</LinearLayout>